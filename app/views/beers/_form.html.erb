<%= form_with(model: beer) do |form| %>
  <% if beer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, { :class => "form-label" }%>
    <%= form.text_field :name, { :class => "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label :style, { :class => "form-label" }%>
    <%= form.select :style_id, options_from_collection_for_select(@styles, :id, :name, @beer.style_id), {},  { :class => "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :brewery, { :class => "form-label" } %>
    <%= form.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name, @beer.brewery_id), {}, { :class => "form-select" } %>
  </div>

  <div>
    <%= form.submit "Create Beer", class:"btn btn-primary" %>
  </div>
<% end %>
