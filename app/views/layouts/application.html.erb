<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="navibar">
      <%= link_to 'Breweries', breweries_path %>
      <%= link_to 'Beers', beers_path %>
      <%= link_to 'Ratings', ratings_path %>
      <%= link_to 'Users', users_path %>
      <%= link_to 'Clubs', beer_clubs_path %>
      <%= link_to 'Search', places_path %>
      |
      <% if current_user %>
        <%= link_to current_user.username, current_user %>
        <%= link_to 'Rate a beer', new_rating_path %>
        <%= link_to 'Join a club', new_membership_path %>
        <%= link_to 'Sign out', signout_path,
        data: {
          "turbo-method": :delete
        }, class: "link-secondary-smooth" %>
      <% else %>
        <%= link_to 'Sign in', signin_path %>
        <%= link_to 'Sign up', signup_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>


</html>
